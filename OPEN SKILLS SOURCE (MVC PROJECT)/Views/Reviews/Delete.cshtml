@model OPEN_SKILLS_SOURCE__MVC_PROJECT_.Models.Reviews

<h2>Delete Review</h2>
<p>Are you sure you want to delete this review?</p>
<p>
    <strong>Username:</strong> @Model.Username<br />
    <strong>Content:</strong> @Model.Content<br />
    <strong>Created At:</strong> @Model.CreatedAt
</p>
@using (Html.BeginForm("DeleteConfirmed", "Reviews", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
}
