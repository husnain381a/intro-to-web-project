@model OPEN_SKILLS_SOURCE__MVC_PROJECT_.Models.Reviews

<h2>Edit Review</h2>

<form method="post">
    <input type="hidden" name="__RequestVerificationToken" value="@ViewData["RequestVerificationToken"]" />
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Username">Username</label>
        <input type="text" id="Username" name="Username" class="form-control" value="@Model.Username" />
    </div>

    <div class="form-group">
        <label for="Content">Content</label>
        <textarea id="Content" name="Content" class="form-control">@Model.Content</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

