@{
}
@model List<(string Name, string Email, string Message)>

<h2>Submitted Data</h2>

@if (Model.Count == 0)
{
    <p>No submissions yet.</p>
}
else
{
    <table border="1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var submission in Model)
            {
                <tr>
                    <td>@submission.Name</td>
                    <td>@submission.Email</td>
                    <td>@submission.Message</td>
                </tr>
            }
        </tbody>
    </table>
}
